{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "/@/": ["src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "helper/**/*.ts",
    "helper/**/*.d.ts",
    "apps/**/*.ts",
    "apps/**/*.d.ts",
    "apps/**/*.tsx",
    "apps/**/*.vue"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
